<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="DateNight.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:DateNight"
    xmlns:views="clr-namespace:DateNight.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Coffee" Icon="coffee_tab">
            <ShellContent ContentTemplate="{DataTemplate views:CoffeePage}" Route="CoffeePage" />        
        </Tab>
        <Tab Title="Dinner" Icon="dinner_tab">
            <ShellContent ContentTemplate="{DataTemplate views:DinnerPage}" Route="DinnerPage" />        
        </Tab>
        <Tab Title="Movie" Icon="movie_tab">
            <ShellContent ContentTemplate="{DataTemplate views:MoviePage}" Route="MoviePage" />        
        </Tab>
        <Tab Title="Total Cost" Icon="money_tab">
            <ShellContent ContentTemplate="{DataTemplate views:MoneyPage}" Route="MoneyPage" />        
        </Tab>
    </TabBar>    
    
    
    
    
</Shell>
